{
    "version": 2,
    "builds": [
        {
            "src": "frontend/index.html",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "frontend/build"
            }
        },
        {
            "src": "backend/server.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/server.js"
        }
    ]
}
